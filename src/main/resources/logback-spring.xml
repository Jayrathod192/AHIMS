<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- File Appender: Logs to file only (No console output) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- Path to the log file -->
        <file>logs/myapp.log</file> <!-- Log file will be saved in the 'logs' folder -->
        <encoder>
            <!-- Log pattern -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %5level - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration: Log only to file, not console -->
    <root level="INFO">
        <appender-ref ref="FILE"/> <!-- Only log to file -->
    </root>

    <!-- Specific loggers (optional, for fine-grained control) -->
    <!-- For example, if you want to capture debug-level logs for a particular package -->
    <logger name="com.example.controller" level="DEBUG"/> <!-- Controller specific logs -->

    <!-- Add more specific loggers as needed -->
    <!-- <logger name="com.example.service" level="DEBUG"/> -->

</configuration>
